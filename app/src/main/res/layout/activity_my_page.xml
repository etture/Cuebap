<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainPage.MyPageActivity"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:fitsSystemWindows="false"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/colorPrimary"
        />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/colorPrimary"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/ic_pic_placeholder"
            android:backgroundTint="@color/colorWhite"
            />

    </FrameLayout>


    <Button
        android:id="@+id/sign_out_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_out"
        />

    <com.ramotion.foldingcell.FoldingCell
        android:id="@+id/foldingCell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:animationDuration="1000"
        app:backSideColor="@color/colorBlue"
        >

        <LinearLayout
            android:id="@+id/cell_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightGray"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="testtest"
                />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="section 1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="section 2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="section 3"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="section 4"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="section 5"
                />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/cell_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorPrimary"
                android:text="hihihihi"
                />

        </FrameLayout>

    </com.ramotion.foldingcell.FoldingCell>

</LinearLayout>