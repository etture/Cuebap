<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    >

    <LinearLayout
        android:id="@+id/food_item_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/restaurant_button"
        android:orientation="vertical"
        android:clickable="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/small_side_margin"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/food_image_left"
                android:layout_width="@dimen/menu_item_width"
                android:layout_height="@dimen/menu_item_width"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/bubble_milk_tea"
                android:background="@drawable/round_image_view"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/food_name_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sample_menu_name"
                    android:textStyle="bold"
                    android:textSize="@dimen/menu_name_text_size"
                    android:lines="2"
                    />

                <TextView
                    android:id="@+id/food_price_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/food_name_left"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:text="sample_price"
                    android:textSize="@dimen/menu_price_text_size"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/food_item_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/food_item_margin"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/restaurant_button"
        android:orientation="vertical"
        android:clickable="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/small_side_margin"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/food_image_right"
                android:layout_width="@dimen/menu_item_width"
                android:layout_height="@dimen/menu_item_width"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/bubble_milk_tea"
                android:background="@drawable/round_image_view"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/food_name_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sample_menu_name"
                    android:textStyle="bold"
                    android:textSize="@dimen/menu_name_text_size"
                    android:lines="2"
                    />

                <TextView
                    android:id="@+id/food_price_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/food_name_right"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:text="sample_price"
                    android:textSize="@dimen/menu_price_text_size"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>