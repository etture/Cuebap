<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:background="@drawable/field_background_white"
    android:padding="4dp"
    >
    
    <TimePicker
        android:id="@+id/order_later_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar"
        >
    </TimePicker>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/order_later_time_picker"
        android:layout_marginBottom="@dimen/small_side_margin"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/order_later_cancel_btn"
            android:layout_width="@dimen/simple_button_width"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/standard_side_margin"
            android:minHeight="0dp"
            android:paddingVertical="4dp"
            android:text="@string/cancel"
            android:textSize="@dimen/cart_item_button_text_size"
            android:background="@drawable/field_background"
            android:gravity="center"
            />

        <Button
            android:id="@+id/order_later_set_btn"
            android:layout_width="@dimen/simple_button_width"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:paddingVertical="4dp"
            android:text="@string/set"
            android:textSize="@dimen/cart_item_button_text_size"
            android:background="@drawable/field_background"
            android:gravity="center"
            />

    </LinearLayout>

</RelativeLayout>