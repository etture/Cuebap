<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/order_item_height"
    android:padding="@dimen/standard_side_margin"
    android:background="@drawable/building_button"
    >

    <TextView
        android:id="@+id/order_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_side_margin"
        android:layout_marginRight="@dimen/small_side_margin"
        android:text="Cafe Latte"
        android:textSize="@dimen/cart_item_name_text_size"
        />

    <TextView
        android:id="@+id/order_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/small_side_margin"
        android:text="6000 won"
        android:textSize="@dimen/cart_item_price_text_size"
        />

</RelativeLayout>